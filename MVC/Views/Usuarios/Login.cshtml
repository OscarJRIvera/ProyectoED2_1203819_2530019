@{
    ViewData["Title"] = "Login";
}
<body>
    <section class="fondoLogin">
        <form asp-action="Login" style=" position: relative; top: 33%; left: 8%">
            <p style="color:darkblue">Por favor ingrese los siguientes datos para poder ingresar a MensajesRelevantes</p>
            <div class="input-group mb-3" style="width: 200px">
                <label for="Usuario">Usuario:</label>
                <input type="text" name="Usuario"><br><br>
                <span style="position: relative; left: 55% " class="text-danger"></span>
            </div>
            <div class="input-group mb-3" style="width: 200px">
                <label for="Contraseña">Contraseña:</label>
                <input type="text" name="Contraseña"><br><br>
                <span style="position: relative; left: 55% " class="text-danger"></span>
            </div>
            <div class="form-group">
                <a style="position: absolute; top: 105%; left: 0%; width: 100px" asp-controller="Usuarios" asp-action="Main" class="btn btn-danger" role="button">Regresar</a>
                <input type="submit" value="Ingresar" class="btn btn-warning" />
            </div>
        </form>
    </section>
</body>