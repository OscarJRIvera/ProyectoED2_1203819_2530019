@{
    ViewData["Title"] = "Solicitudes";
}
<a style="position: absolute; top: 8%; left: 40%; width: 300px" asp-controller="Usuarios" asp-action="EntradaUsuarioActivo" class="btn btn-danger" role="button">Regresar</a>
<div class="form-group">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <div class="container bootstrap snippets bootdey">







        <div class="panel panel-default">
            <div class="panel-body p-t-0">
                <div class="input-group">
                    <input type="text" id="BuscarContacto" name="BuscarContacto" class="form-control" placeholder="Agregar Contacto">
                    <span class="input-group-btn">
                        <a asp-controller="Usuarios" asp-action="Login" class="btn btn-effect-ripple btn-primary" role="button"><i class="fa fa-search"></i></a>



                    </span>
                </div>
            </div>
            @foreach (var item in (ViewBag.Solicitudes))
            {
                <div class="row">
                    <div class="col-sm-6">
                        <div class="panel" style="position: relative; top: 120%; left: 50%">
                            <div class="panel-body p-t-10">
                                <div class="media-main">
                                    <a class="pull-left" href="#">
                                        <img class="thumb-lg img-circle bx-s" src="~/images/Solicitud.png" alt="">
                                    </a>
                                    <div class="pull-right btn-group-sm">
                                        <a href="Aceptar" class="btn btn-success tooltips" data-placement="top" data-toggle="tooltip" data-original-title="Chat" name="@item.Usuario">
                                            <i class="fa fa-check" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                    <div class="info">
                                        <h4>@item.Usuario</h4>
                                        <h4>@item.Nombre @item.Apellido</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>