<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" type="text/css" rel="stylesheet" />
</head>
<body>
    <div class="Container">
        <h3 class="text-center">Chats</h3>
        <div class="messaging">
            <div class="inbox_msg">
                <div class="inbox_people">
                    <div class="headind_srch">
                        <div class="recent_heading">
                            <h4>Chats</h4>>
                        </div>
                        <div class="srch_bar">
                            <div class="input-group mb-3">
                                <input type="text" class="search-bar" placeholder="Buscar Contactos">
                                <span class="input-group-addon">
                                    <button type="button"> <i class="fa fa-search" aria-hidden="true"></i> </button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="inbox_chat">
                        <div class="chat_list;active_chat">
                            @foreach (var k in ViewBag.Contactos)
                            {
                                @if (k.tipo == true)
                                {
                                    <div class="chat_people">
                                        <div class="chat_img"> <img src="~/images/Grupos.png" alt="sunil"> </div>
                                        <div class="chat_ib">
                                            <h5>@k.nombre <span href="@Url.Action("EntradaUsuarioActivo","Usuarios",new { valor = k})" class="btn btn-success tooltips" data-placement="top" data-toggle="tooltip" data-original-title="Chat"><i class="fa fa-envelope" aria-hidden="true"></i></span></h5>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="chat_people">
                                        <div class="chat_img"> <img src="~/images/Usuario.png" alt="sunil"> </div>
                                        <div class="chat_ib">
                                            @if (k.Usuario == ViewBag.Comprobar)
                                             {
                                                <h5>@k.Usuario2 </h5>
                                                <a href="@Url.Action("EntradaUsuarioActivo","Usuarios",new { valor = k.Usuario2})" class="btn btn-success tooltips" data-placement="top" data-toggle="tooltip" data-original-title="Chat"><i class="fa fa-envelope" aria-hidden="true"></i></a>
                                             }
                                            else
                                            {
                                                <h5>@k.Usuario <a href="@Url.Action("EntradaUsuarioActivo","Usuarios",new { valor = k.Usuario})" class="btn btn-success tooltips" data-placement="top" data-toggle="tooltip" data-original-title="Chat"><i class="fa fa-envelope" aria-hidden="true"></i></a></h5>
                                            }

                                        </div>
                                    </div>
                                }

                            }
                        </div>
                    </div>

                </div>
                <div class="mesgs">
                    <div class="msg_history">
                        @foreach (var f in ViewBag.Mensajes)
                        {
                            <div class="incoming_msg">
                                <div class="incoming_msg_img"> <img src="~/images/Usuario.png"> </div>
                                <div class="received_msg">
                                    <div class="received_withd_msg">
                                        <p>
                                            @f
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="outgoing_msg">
                                <div class="sent_msg">
                                    <p>
                                        Test which is a new approach to have all
                                        solutions
                                    </p>
                                </div>
                            </div>
                        }

                    </div>
                    <div class="type_msg">
                        <div class="input_msg_write">
                            <input asp-="text" class="write_msg" placeholder="Escribe un mensaje" />
                            <button class="msg_send_btn" type="button"><i class="fa fa-paper-plane-o" aria-hidden="true"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>